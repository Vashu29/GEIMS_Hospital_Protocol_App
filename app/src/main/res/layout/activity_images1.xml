<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context=".images_1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image 1 -->

            <!-- Images and TextViews inside the ScrollView -->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/im1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/geu_im" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="465dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <ImageView
                    android:id="@+id/im2"
                    android:layout_width="match_parent"
                    android:layout_height="465dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/geims_im1"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <ImageView
                    android:id="@+id/im3"
                    android:layout_width="match_parent"
                    android:layout_height="265dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/geims_1"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <ImageView
                    android:id="@+id/im4"
                    android:layout_width="match_parent"
                    android:layout_height="265dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/geims_2"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <ImageView
                    android:id="@+id/im5"
                    android:layout_width="match_parent"
                    android:layout_height="265dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/geims_3"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <ImageView
                    android:id="@+id/im6"
                    android:layout_width="match_parent"
                    android:layout_height="265dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/geims_5"
                    />
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Team Behind The Scene"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/rounded_main_img_bg"
                android:clipToOutline="true"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <ImageView
                    android:id="@+id/im7"
                    android:layout_width="match_parent"
                    android:layout_height="265dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sir_images"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
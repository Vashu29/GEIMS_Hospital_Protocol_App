<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context=".images_1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image 1 -->
            <ImageView
                android:id="@+id/im1"
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:scaleType="centerCrop"
                android:src="@drawable/geu_im" />

            <ImageView
                android:id="@+id/im2"
                android:layout_width="match_parent"
                android:layout_height="465dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/geims_im1" />

            <ImageView
                android:id="@+id/im3"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:scaleType="centerCrop"
                android:src="@drawable/geims_1" />

            <ImageView
                android:id="@+id/im4"
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/geims_2" />
            <ImageView
                android:id="@+id/im5"
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/geims_3" />
            <ImageView
                android:id="@+id/im6"
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/geims_5" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Team Behind The Scene"
                android:background="#E4E0E0"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/im7"
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sir_images" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>